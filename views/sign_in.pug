extends layout

block content
  h1=title

  form(method='POST' action='')
    div.form-group
      label(for='email') Email:
      input#email.form-control(type='text' placeholder='email@email.com' name='email' required='true' value=(undefined===member ? '' : member.email))
      label(for='password') Password:
      input#confirm.form-control(type'text' placeholder='password' name='password' required='true')
    button.btn.btn-primary(type='submit') Submit
  if errors
    ul
      for error in errors
        li!= error.msg