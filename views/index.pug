extends layout

block content
    h1= title
    if(user)
        p Welcome #{user.first_name}
        ul
         each twoot in twoot_list
            li
                div #{user.status ? twoot.username : "anonymous"}
                div #{twoot.timeStamp}
                div #{twoot.title}
                div #{twoot.body}
    else
        p Welcome to #{title}
